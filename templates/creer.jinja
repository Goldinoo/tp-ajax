{% extends "_maquette.jinja" %}
{% block scripts %}
    <script defer="defer"
            src="/static/js/scriptCompte.js"></script>

    <script defer="defer"
            src="/static/js/utils-ajax.js"></script>
{% endblock %}
{% block contenu %}
    <header>
        <h1>{{ identifiant }}</h1>
    </header>

    <main>

        <div class="w-50 divForm d-flex flex-column align-items-center text-center">
            <h2>
                Création d'un compte
            </h2>
            <form class="w-100 d-flex flex-column align-items-center text-center" method="post">

                <div class="text-start w-50">
                    <label for="identifiant">Identifiant:</label>
                    <input type="number" class="w-100" id="identifiant" name="identifiant" placeholder="Identifiant"
                           required>
                    <div id="identifiant-msg" style="color: red;"></div>

                </div>

                <div class="text-start w-50">
                    <label for="nom">Saisissez votre nom: </label>
                    <input type="text"
                           id="nom"
                           name="nom"
                           placeholder="Nom d'utilisateur"
                           class="w-100 form-control"
                           required
                    >
                </div>

                <div class="text-start w-50">
                    <label for="courriel">Saisissez votre adresse: </label>
                    <input type="text"
                           id="courriel"
                           name="courriel"
                           placeholder="Adresse postale"
                           class="w-100 form-control"
                           required
                    >

                </div>

                <div class="text-start w-50">
                    <label for="adresse">Saisissez votre courriel</label>
                    <input type="email"

                           id="adresse"
                           name="adresse"
                           placeholder="Email"
                           class="w-100 form-control"
                           required
                    >

                </div>


                <div class="text-start w-50">
                    <label for="mdp">Saisissez votre mot de passe</label>
                    <input type="password"
                           id="mdp"
                           name="mdp"
                           placeholder="Mot de passe"
                           class="w-100 form-control"
                           required
                            {#                   {% if mdp is not none %}#}
                            {#                        value="{{ mdp }}"#}
                            {#                    {% endif %}#}
                    >

                </div>

                <div class="text-start w-50">
                    <label for="mdp1">Confirmez votre mot de passe</label>
                    <input type="password"
                           id="mdp1"
                           name="mdp1"
                           placeholder="Mot de passe"
                           class="w-100 form-control"
                           required
                            {#                   {% if mdp is not none %}#}
                            {#                        value="{{ mdp }}"#}
                            {#                    {% endif %}#}
                    >

                </div>


                <input type="submit" value="Créer" class="mt-3 w-25">

            </form>

            {% if message %}
                <div class="alert alert-success">{{ message }}</div>
            {% endif %}

        </div>

    </main>
{% endblock %}